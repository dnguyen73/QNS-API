{
  "name": "product",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "productCode": {
      "type": "string",
      "required": true
    },
    "productName": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "string",
      "required": true,
      "default": "To be defined"
    },
    "price": {
      "type": "number",
      "required": true,
      "default": 0
    },
    "availableSizes": {
      "type": [
        "string"
      ]
    },
    "availableColors": {
      "type": [
        "object"
      ]
    },
    "images": {
      "type": [
        "object"
      ]
    },
    "stocks": {
      "type": [
        "object"
      ]
    },
    "totalQuantity": {
      "type": "number"
    },
    "isOnSale": {
      "type": "boolean",
      "default": false
    },
    "discount": {
      "type": "number",
      "default": 0
    },
    "createdDate": {
      "type": "date"
    },
    "originVendor": {
      "type": "string"
    }
  },
  "validations": [],
  "relations": {
    "category": {
      "type": "belongsTo",
      "model": "category",
      "foreignKey": "categoryId"
    }
  },
  "acls": [],
  "methods": {}
}
